# Result when the user says 'describe the scene'

sp {apply*push-verb-command*mark*processed
   (state <s> ^operator <o>)
   (<o> ^name push-verb-command
        ^message <msg>)
-->
   (<msg> ^processed true)
}

sp {apply*push-verb-command*remove*message
   (state <s> ^operator <o>)
   (<o> ^name push-verb-command
        ^message <msg>)
   (<msg> ^processed true
         -^purpose)
-->
   (<s> ^instructor-message <msg> -)
}

