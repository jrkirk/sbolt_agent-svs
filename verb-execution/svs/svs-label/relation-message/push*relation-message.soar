sp {propose*push-relation-message
   (state <s> ^topstate <s>
              ^instructor-message <msg>)
   (<msg> ^type relation-message)
-->
   (<s> ^operator <o> +)
   (<o> ^name push-relation-message
        ^category communication)
}

sp {apply*push-relation-message
   (state <s> ^operator.name push-relation-message
              ^instructor-message <msg>)
   (<msg> ^type relation-message
          ^information.relation <rel>)
   (<rel> ^p1-object <obja> ^p2-object <objb> ^word <prep>)
-->
   (<msg> ^purpose <p>)
   (<p> ^type relation-message
        ^parameters <params>
        ^satisfaction <sat>)
   (<params> ^object1 <obja>
             ^object2 <objb>
             ^prep <prep>)
   (<sat> ^learning-event preposition)
}