#load all structures related to game into working memory
sp {find-action*propose*lookup-game
   (state <s> ^name find-action
             -^game
              ^game-name <game>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name lookup-game
        ^category svs # for now determine better or new category
        ^game-name <game>)
}

