### write a rule to detect goal

sp {new-operator*detect*goal
   (state <s> ^desired <d>
   	      ^vpredicates.predicate <p>)
   (<d> ^in <in-p>)
   (<in-p> ^object <nobj>
   	   ^location <loc>)
   (<p> ^<predicate> <inp>)
   (<inp> ^object <obj>
   	  ^location <loc>)
   (<obj> ^focus yes)
   (<nobj> ^focus yes)
-->
   (<s> ^success <d>)
}


