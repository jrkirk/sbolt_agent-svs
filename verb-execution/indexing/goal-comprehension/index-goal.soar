sp {elaborate*state*index-goal
   (state <s> ^name index-goal
   	      ^superstate.operator <sop>)
   (<sop> ^name index-goal
   	  ^information <info>
	  ^indexed-operator <iop>)
   (<iop> ^_metadata.map-id <met>)
   (<met> ^goal <gid>)
   -->
   (<s> ^information <info>
   	^map-id <met>
	^goal-id <gid>
	^indexed-operator <iop>
	^bit flip)
}

