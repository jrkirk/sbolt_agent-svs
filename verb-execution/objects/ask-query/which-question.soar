# which-question
#	Query for the category of a known word

sp {elaborate*ask-query*which-question
   (state <s> ^operator <o>)
   (<o> ^name ask-query
        ^query.type which-question)
-->
   (<o> ^type which-question
        ^expected-response object-message)
}

sp {elaborate*ask-query*which-question*description
   (state <s> ^operator <o>)
   (<o> ^name ask-query
        ^query <q>
        ^fields <f>)
   (<q> ^type which-question
        ^description <desc>)
-->
   (<f> ^description <desc>)
}